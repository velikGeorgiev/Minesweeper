<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="1dp"></corners>
            <stroke android:width="1px" android:color="#1b5f9e" />

            <gradient
                android:startColor="#266eb1"

                android:endColor="#98d9ff"
                android:type="linear"
                android:angle="315"/>
        </shape>

        <shape>
            <gradient
                android:startColor="#00CFCCCE"
                android:centerColor="#FFFFFF"
                android:endColor="#00BAB8B9"
                android:angle="270" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="1dp"></corners>
            <stroke android:width="1px" android:color="#1b5f9e" />

            <gradient
                android:startColor="#266eb1"

                android:endColor="#98d9ff"
                android:type="linear"
                android:angle="135"/>
        </shape>
    </item>
</selector>